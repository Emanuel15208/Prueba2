local player = game.Players.LocalPlayer

-- üßø GUI √∫nico
local gui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
gui.Name = "RitualConsole"
gui.ResetOnSpawn = false

-- üß± Frame principal
local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(0, 270, 0, 320)
frame.Position = UDim2.new(0, 20, 0, 20)
frame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
frame.BorderSizePixel = 2
frame.BorderColor3 = Color3.fromRGB(100, 100, 255)
frame.Active = true
frame.Draggable = true

-- üßæ T√≠tulo
local title = Instance.new("TextLabel", frame)
title.Size = UDim2.new(1, -35, 0, 30)
title.Position = UDim2.new(0, 5, 0, 5)
title.Text = "üßø Consola Ritual"
title.TextColor3 = Color3.new(1, 1, 1)
title.BackgroundTransparency = 1
title.Font = Enum.Font.GothamBold
title.TextSize = 16
title.TextXAlignment = Enum.TextXAlignment.Left

-- ‚ùå Bot√≥n de cerrar
local closeBtn = Instance.new("TextButton", frame)
closeBtn.Size = UDim2.new(0, 25, 0, 25)
closeBtn.Position = UDim2.new(1, -30, 0, 5)
closeBtn.Text = "X"
closeBtn.BackgroundColor3 = Color3.fromRGB(150, 50, 50)
closeBtn.TextColor3 = Color3.new(1, 1, 1)
closeBtn.Font = Enum.Font.GothamBold
closeBtn.TextSize = 14
closeBtn.MouseButton1Click:Connect(function()
	frame:Destroy()
end)

-- üìú Consola arriba
local consoleBox = Instance.new("TextBox", frame)
consoleBox.Size = UDim2.new(1, -20, 0, 60)
consoleBox.Position = UDim2.new(0, 10, 0, 40)
consoleBox.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
consoleBox.TextColor3 = Color3.new(1, 1, 1)
consoleBox.Text = "-- Aqu√≠ aparecer√° el c√≥digo"
consoleBox.Font = Enum.Font.Code
consoleBox.TextSize = 14
consoleBox.TextXAlignment = Enum.TextXAlignment.Left
consoleBox.TextYAlignment = Enum.TextYAlignment.Top
consoleBox.ClearTextOnFocus = false
consoleBox.MultiLine = true

-- üìã Scroll lateral izquierdo para hallazgos
local scrollFrame = Instance.new("ScrollingFrame", frame)
scrollFrame.Size = UDim2.new(0, 110, 0, 180)
scrollFrame.Position = UDim2.new(0, 10, 0, 110)
scrollFrame.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
scrollFrame.BorderSizePixel = 0
scrollFrame.CanvasSize = UDim2.new(0, 0, 0, 1000)
scrollFrame.ScrollBarThickness = 6

-- üß† Funci√≥n para agregar botones din√°micos
local function agregarHallazgo(nombre, codigo)
	local count = #scrollFrame:GetChildren() - 1
	local btn = Instance.new("TextButton", scrollFrame)
	btn.Size = UDim2.new(1, 0, 0, 25)
	btn.Position = UDim2.new(0, 0, 0, count * 28)
	btn.Text = nombre
	btn.BackgroundColor3 = Color3.fromRGB(50, 100, 50)
	btn.TextColor3 = Color3.new(1, 1, 1)
	btn.Font = Enum.Font.Gotham
	btn.TextSize = 13
	btn.MouseButton1Click:Connect(function()
		consoleBox.Text = codigo
	end)
end

-- üßø Simulaci√≥n de hallazgos
agregarHallazgo("RemoteEvent: Teleport", "game.ReplicatedStorage.Teleport:FireServer(Vector3.new(0,10,0))")
agregarHallazgo("RemoteFunction: GetStats", "local stats = game.ReplicatedStorage.GetStats:InvokeServer()")
agregarHallazgo("Kick detectado", "player:Kick('Anti-cheat triggered')")

-- üîò Botones en rejilla 3x3 (abajo derecha)
local options = {
	"üìç", "‚öôÔ∏è", "üßç",
	"üëÅÔ∏è", "üîç", "üîÑ",
	"üß†", "üßø", "‚öîÔ∏è"
}

for i, icon in ipairs(options) do
	local btn = Instance.new("TextButton", frame)
	btn.Size = UDim2.new(0, 40, 0, 25)
	local col = (i - 1) % 3
	local row = math.floor((i - 1) / 3)
	btn.Position = UDim2.new(0, 130 + col * 45, 0, 110 + row * 30)
	btn.Text = icon
	btn.BackgroundColor3 = Color3.fromRGB(50, 50, 100)
	btn.TextColor3 = Color3.new(1, 1, 1)
	btn.Font = Enum.Font.Gotham
	btn.TextSize = 14
end
